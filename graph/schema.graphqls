type Action {
  id: ID!
  name: String
  internshipModel: [InternshipModel]
}

type InternshipModel {
  id: ID!
  name: String!
  actions: [Action]
}

type Internship {
  id: ID!
  name: String!
  internshipModel: InternshipModel
  users: [User]
}
type Log{
  id: ID!
  student: User!
  action: Action!
  master: User!
  date: Time!
}

type User{
  id: ID!
  number: String!
  nCode: String
  username: String!
  password: String!
  name: String
  lastname: String
  Role: String!
  phone: String
  internship: [Internship]
}


type Query {
  users: [User!]!
  actions: [Action!]!
}

input NewAction {
  name: String!
}

type Mutation {
  createAction(input: NewAction!): Action!
}

scalar Time
